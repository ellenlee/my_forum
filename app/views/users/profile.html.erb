
<p class="pull-right">註冊日期：<%= current_user.created_at.strftime('%Y/%m/%d') %></p>

<div class="col-sm-4 text-center">
	<%= image_tag( current_user.avatar.url(:medium) ) %>
</div>
<div class="col-sm-8">
	<h1><%= current_user.name %></h1>
	<p><%= current_user.email %></p>	
	
	<p>
