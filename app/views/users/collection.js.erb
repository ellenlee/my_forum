<% if current_user.collected_posts?(@post) %>

	$('.post_collect_<%= @post.id %>').html('<%= button_to "取消收藏", collection_user_path(current_user,:post_id => @post), :method => :get, :remote => true %>');

<% else %>

	$('.post_collect_<%= @post.id %>').html('<%= button_to "加入收藏", collection_user_path(current_user,:post_id => @post), :method => :get, :remote => true %>');

<% end %>