<!DOCTYPE html>
<html>
  <head>
    <title>｜XXX 課程中心｜<%= @page_title%></title>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <style>
    body {
      padding: 10px;
    }
    .alert {
      padding: 5px;
      margin-top : 10px;
    }
  </style>
  </head>

<body>
<!-- 登入 flag -->
<div class="clearfix">
  <% if current_user %>
    <%= link_to current_user.name+' ('+current_user.email+')', profile_user_path(current_user) %> |
    
    <%= link_to('登出', destroy_user_session_path, :method => :delete) %> |
    <%= link_to('修改密碼', edit_registration_path(:user)) %>
  <% else %>
    <%= link_to('註冊', new_registration_path(:user)) %> |
    <%= link_to('登入', new_session_path(:user)) %> or
    <%= link_to "以 Facebook 登入", user_facebook_omniauth_authorize_path %>
  <% end %> 

  <!-- 全站導覽列 -->
  <ul class="list-inline pull-right">
    <li><%= link_to "關於本站", about_topics_path %></li>
    <li>會員中心</li>
  </ul>  
</div>
<!-- 警告訊息 -->
<% if flash[:notice].present? %>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice]%>
  </div>
<% end %>

<% if flash[:alert].present? %>
  <div class="alert alert-danger" role="alert">
   <%= flash[:alert]%>
  </div>
<% end %>




<!-- yield -->
  <%= yield %>
</body>
</html>
